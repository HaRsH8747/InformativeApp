<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="20dp"
    tools:context=".categories.headshottool.HeadshotToolActivity">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_smart_phone"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/colorSecondary"
        android:fontFamily="@font/delagothiconerregular"
        android:text="For Smart Phone"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryVariant"
        android:textSize="20dp"
        app:iconPadding="30dp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_smartphone"
        app:iconSize="70dp"
        app:iconGravity="textEnd"
        app:iconTint="@color/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_pc"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/colorSecondary"
        android:fontFamily="@font/delagothiconerregular"
        android:text="For PC"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryVariant"
        android:textSize="20dp"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_computer"
        app:iconGravity="textEnd"
        app:iconSize="70dp"
        app:iconPadding="150dp"
        app:iconTint="@color/colorPrimaryVariant"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_smart_phone" />

    <com.example.informativeapp.bannerAds.MyBannerAdsView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>